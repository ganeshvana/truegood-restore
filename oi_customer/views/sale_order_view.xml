<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sale_order_form_inherit" model="ir.ui.view">
            <field name="name">sale_order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="delivery_slot" readonly="1"/>
                    <field name="mobile_delivery_status"/>
                    <field name="payment_mode" readonly="1"/>
                    <label for="delivery_status"/>
                    <div class="o_row">
                        <field name="delivery_status"/>
                        <button string="Update Status" class="btn btn-link" type="object" name="update_status_to_mobile_app"/>
                    </div>
                </xpath>
<!--                <xpath expr="//field[@name='picking_policy']" position="before">-->
<!--                    <div class="o_row">-->
<!--                        <field name="delivery_status"/>-->
<!--                        <button string="Update Status" class="btn btn-link" type="object" name="update_status_to_mobile_app"/>-->
<!--                    </div>-->
<!--                </xpath>-->
            </field>
        </record>
    </data>
</odoo>
