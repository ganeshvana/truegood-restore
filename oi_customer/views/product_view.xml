<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_template_form_inherit" model="ir.ui.view">
            <field name="name">product.template.common.form.inherit.appcategory</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <field name="is_update" invisible="1"/>
                    <button string="Sync to App" type="object" name="sync_data_to_mobile_app"
                            attrs="{'invisible': [('sale_ok','=',False)]}"/>
                    <button string="Delete from App" type="object" name="delete_product_from_mobile_app"
                            attrs="{'invisible': [('is_update','=',False)]}"/>
                </xpath>
                <xpath expr="//field[@name='categ_id']" position="after">
                    <field name="image_url"/>
                    <field name="app_category"/>
                    <field name="app_subcategory" domain="[('category_id', '=', app_category)]"/>
                    <field name="keyword_search" widget="many2many_tags"/>
                    <field name="is_bestseller" widget="boolean_toggle"/>
                    <field name="is_recommended" widget="boolean_toggle"/>
                    <field name="is_offer_product" widget="boolean_toggle"/>
                    <field name="offer_price" attrs="{'invisible': [('is_offer_product','=',False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
