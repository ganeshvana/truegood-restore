<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_picking_form_inherit_delivery_status" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit.delivery_status</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_type']" position="before">
                    <field name="mobile_delivery_status" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
