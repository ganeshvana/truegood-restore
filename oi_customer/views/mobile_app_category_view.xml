<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="app_category_form_view" model="ir.ui.view">
            <field name="name">app.category.form</field>
            <field name="model">app.category</field>
            <field name="arch" type="xml">
                <form string="App Category">
                    <header>
                        <button string="Sync to App" type="object" name="sync_data_to_mobile_app"/>
                    </header>
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="image_url"/>
                            </group>
                            <group>
                                <field name="child_id" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="app_category_tree_view" model="ir.ui.view">
            <field name="name">app.category.tree</field>
            <field name="model">app.category</field>
            <field name="arch" type="xml">
                <tree string="App Category">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="app_category_act_window" model="ir.actions.act_window">
            <field name="name">App Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">app.category</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create New App Categories.
                </p>
            </field>
        </record>

        <record id="app_subcategory_form_view" model="ir.ui.view">
            <field name="name">app.subcategory.form</field>
            <field name="model">app.subcategory</field>
            <field name="arch" type="xml">
                <form string="App Sub Category">
                    <header>
                        <button string="Sync to App" type="object" name="sync_data_to_mobile_app"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="category_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="app_subcategory_tree_view" model="ir.ui.view">
            <field name="name">app.subcategory.tree</field>
            <field name="model">app.subcategory</field>
            <field name="arch" type="xml">
                <tree string="App Sub Category">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="app_subcategory_act_window" model="ir.actions.act_window">
            <field name="name">App Sub Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">app.subcategory</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create New App Sub Categories.
                </p>
            </field>
        </record>

        <menuitem name="App Category"
                  id="app_category"
                  parent="sale.menu_sale_config"
                  sequence="50"/>

        <menuitem name="App Category"
                  id="app_category_menu"
                  parent="app_category"
                  action="app_category_act_window"/>

        <menuitem name="App SubCategory"
                  id="app_subcategory_menu"
                  parent="app_category"
                  action="app_subcategory_act_window"/>

    </data>
</odoo>
