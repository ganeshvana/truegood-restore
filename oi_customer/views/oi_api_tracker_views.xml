<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="oi_api_tracker_form_view" model="ir.ui.view">
            <field name="name">oi.api.tracker.form</field>
            <field name="model">oi.api.tracker</field>
            <field name="arch" type="xml">
                <form string="Api Tracker">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="request_body"/>
                            <field name="response"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="oi_api_tracker_tree_view" model="ir.ui.view">
            <field name="name">oi.api.tracker.tree</field>
            <field name="model">oi.api.tracker</field>
            <field name="arch" type="xml">
                <tree string="Api Tracker">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="oi_api_tracker_act_window" model="ir.actions.act_window">
            <field name="name">Api Tracker</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">oi.api.tracker</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no Api calls click here to add new.
                </p>
            </field>
        </record>

        <menuitem name="Api Tracker"
                  id="oi_api_tracker_menu"
                  parent="base.menu_custom"
                  sequence="500"
                  action="oi_api_tracker_act_window"/>

    </data>
</odoo>