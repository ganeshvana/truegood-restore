<?xml version="1.0" encoding="utf-8"?>


<odoo>
<template id="invoice_payment_new_doc">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.basic_layout"> 
            
              <table class="table table-bordered mb-0" style="width=100px;border: none;">
                <tr>
                    <td  style="width=50px;text-align:left">
                        <img width="200px" height="100px" src="/oi_tg_invoice_report/static/description/Truegood-logo.png" class="float-left" alt="Logo"/>

                    </td>

                    <td style="width=50px;text-align:right">
                        <strong><span >TRUE GOOD ESSENTIALS LLP</span></strong><br/>
                        <span  t-field="o.company_id.partner_id.street"/><br/><span  t-field="o.company_id.partner_id.street2"/><br/>
                        <span  t-field="o.company_id.partner_id.city"/><span style="text-transform: uppercase;" t-field="o.company_id.partner_id.state_id"/><br/>
                        <span  t-field="o.company_id.partner_id.country_id"/>-<span  t-field="o.company_id.partner_id.zip"/><br/>
                        <span >Paytm @ 7605013512</span><br/>

                        
                    </td>
                </tr>
            </table>

            <table class="table table-bordered mb-0"  style="border: 2px solid black;margin-right:10px;width:100%">
                    <tr>
                        <td style="text-align:left;width:80%">
                          
                                <span t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' />
                                
                        </td>

                        <td  style="text-align:left;width:20%">
                            <strong><span>Date:</span></strong><span style="font-size:12px" t-esc="o.invoice_date"/><br/>
                            <strong>Bill:</strong><span style="font-size:12px" t-esc="o.name"/><br/>
                            <strong><span>SO No:</span></strong><span style="font-size:12px" t-esc="o.invoice_origin"/>
                        </td>
                        
                    </tr>
                </table>

                <table class="table table-sm o_main_table" style="border: 1px solid black;" name="invoice_line_table">
                    <tr>
                        <th ><strong>Description</strong></th>
                        <th ><strong>Quantity</strong></th>
                        <th ><strong>Price</strong></th>
                        <th ><strong>Amount</strong></th>
                    </tr>

                <tr t-foreach="o.invoice_line_ids" t-as="line">
                    <td style="border: none;"><span t-if="line.product_id" t-field="line.product_id"/></td>
                    <td style="border: none;"><span t-if="line.quantity" t-field="line.quantity"/></td>
                    <td style="border: none;"><span t-if="line.price_unit" t-field="line.price_unit"/></td>
                    <td style="border: none;"><span t-if="line.price_subtotal" t-field="line.price_subtotal"/></td>
                </tr>
                
                </table>
                    
                <table class="table table-sm" style="page-break-inside: avoid;width:100%;border: none;">
                    <tr class="border-black o_total">
                        <td style="width:60%;border: none;"></td>
                        <td style="width:10%;border: none;"><strong >Total:</strong></td>
                        <td style="width:13%;border: none;"></td>
                        <td style="width:12%;border: none;"><strong t-field="o.amount_total"></strong></td>
                </tr>
            </table>
       

          </t>
        </t>
    </t>
        
</template>


<template id="invoiceslip">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="invoice_payslip.invoice_payment_new_doc"/>
        </t>
    </t>
</template>

</odoo>