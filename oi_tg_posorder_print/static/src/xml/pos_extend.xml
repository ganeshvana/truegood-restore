<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="l10n_in_pos.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//t" position="replace">
            
            <t t-if="receipt.client and env.pos.company.country.code == 'IN'">
                <div style="text-align:left">
                    <div><t t-esc="receipt.client.name" /></div>
                    <t t-if="receipt.client.phone">
                        <div>
                            <span>Phone: </span>
                            <t t-esc="receipt.client.phone" />
                        </div>
                    </t>
                    <br />
                </div>
            </t>


           
        </xpath>        
    </t>
</templates>

