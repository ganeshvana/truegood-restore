<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="pos_config_form_view_inherit">
        <field name="name">pos.config.form.extended.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//h2" position="before">
                <h2 name="order">QR/Barcode Scanner Configuration</h2>
                <div class="row mt16 o_settings_container">
                    <div id="autocomplete_address" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <label for="sh_pos_barcode_mobile_type" />
                            <field name="sh_pos_barcode_mobile_type" />
                        </div>
                    </div>
                    <div id="autocomplete_address" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_pos_bm_is_cont_scan" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_pos_bm_is_cont_scan" />
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container">
                    <div id="autocomplete_address" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_pos_bm_is_notify_on_success" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_pos_bm_is_notify_on_success" />
                        </div>
                    </div>
                    <div id="autocomplete_address" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_pos_bm_is_notify_on_fail" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_pos_bm_is_notify_on_fail" />
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container">
                    <div id="autocomplete_address" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_pos_bm_is_sound_on_success" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_pos_bm_is_sound_on_success" />
                        </div>
                    </div>
                    <div id="autocomplete_address" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="sh_pos_bm_is_sound_on_fail" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sh_pos_bm_is_sound_on_fail" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
