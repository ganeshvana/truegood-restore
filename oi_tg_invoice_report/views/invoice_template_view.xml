<?xml version="1.0"?>
<odoo>
    <data>

        <template id="report_invoices">
            <t t-call="web.basic_layout">
                <!-- <div>
                        <img width="100px" height="50px" src="/oi_tg_invoice_report/static/description/Truegood-logo.png" class="float-left" alt="Logo"/>

                    </div> -->
                
                <div class="page">
                    
                    
                    <t t-foreach="docs" t-as="invoice">
                        <t t-set="list_of_copy" t-value="['Original for Recipient', 'Duplicate for Transporter', 'Triplicate for Supplier', 'Extra Copy-1']"/>
                            <t t-foreach="list_of_copy" t-as="copy_name">

                                <t t-call="oi_tg_invoice_report.report_multi_invoice">
                                    <t t-set="invoice" t-value="invoice"/>
                                </t>
                            </t>
                    </t>
                </div>
            </t>
            
        </template>

       


        <template id="report_multi_invoice">
          
            <div style="width: 110mm; display: inline-table; height: 145mm;">
                
                <!-- <![CDATA[&nbsp;]]> -->
                <table class="table table-bordered mb-0" style="margin-top:5px;border:hidden">
                    <tr>
                        <td  style="text-align:left">
                            <img width="100px" height="50px" src="/oi_tg_invoice_report/static/description/Truegood-logo.png" class="float-left" alt="Logo"/>

                        </td>

                        <td style="height: 20%;text-align:right">
                            <strong><span style="font-size:10px">TRUE GOOD ESSENTIALS LLP</span></strong><br/>
                            <span style="font-size:10px" t-field="invoice.company_id.partner_id.street"/><br/><span style="font-size:10px" t-field="invoice.company_id.partner_id.street2"/><br/>
                            <span style="font-size:10px" t-field="invoice.company_id.partner_id.city"/><span style="font-size:10px;text-transform: uppercase;" t-field="invoice.company_id.partner_id.state_id"/><br/>
                            <span style="font-size:10px" t-field="invoice.company_id.partner_id.country_id"/>-<span style="font-size:10px" t-field="invoice.company_id.partner_id.zip"/><br/>
							<span style="font-size:10px">Paytm @ 7605013512</span><br/>
                            
                        </td>
                        
                    </tr>
                   
                </table>
                <table class="table table-bordered mb-0" style="border: 2px solid black;cellspacing:10px;margin-right:10px ">
                    <tr>
                        <td class="col-6" style="text-align:left">
                            <!-- <t t-set="address"> -->
                                <span style="font-size:14px" t-field="invoice.partner_id" t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' />
                                <!-- <div t-if="invoice.partner_id.vat" class="mt16">
                                    <t t-if="invoice.company_id.country_id.vat_label" t-esc="invoice.company_id.country_id.vat_label" id="inv_tax_id_label"/>
                                    <t t-else="">Tax ID</t>: <span t-field="invoice.partner_id.vat"/></div> -->
                            <!-- </t> -->
                        </td>

                        <td class="col-6" style="height: 20%;text-align:left">
                            <strong><span style="font-size:12px">Date:</span></strong><span style="font-size:12px" t-esc="invoice.date"/><br/>

                            <strong><span style="font-size:12px">Bill:</span></strong><span style="font-size:12px" t-esc="invoice.name"/>
                            <strong><span style="font-size:12px">SO No:</span></strong><span style="font-size:12px" t-esc="invoice.invoice_origin"/>
                        </td>
                        
                    </tr>
                   
                </table>
                <t t-set="display_discount" t-value="any(l.discount for l in invoice.invoice_line_ids)"/>

                    <table class="table table-sm o_main_table" style="border: 1px solid black;" name="invoice_line_table">
                            <tr style="font-size:15px">
                                <th name="th_description" class="text-left"><span>Description</span></th>
                                <th name="th_quantity" class="text-right"><span>Quantity</span></th>
                                <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Price</span></th>
                                
                                <th name="th_subtotal" class="text-right">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                </th>
                            </tr>
                        <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="lines" t-value="invoice.invoice_line_ids.sorted(key=lambda l: (l.product_weight, l.name),)"/>

                            <t t-foreach="lines" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                        <td style="font-size:13px" name="account_invoice_line_name"><span t-field="line.product_id.name" t-options="{'widget': 'text'}"/></td>
                                        <td style="font-size:13px" class="text-right">
                                            <span t-field="line.quantity"/>
                                            <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                                        </td>
                                        <td style="font-size:13px" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span class="text-nowrap" t-field="line.price_unit"/>
                                        </td>
                                       
                                        <td style="font-size:13px" class="text-right o_price_total">
                                            <span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                    </t>
                                </tr>

                                <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td style="font-size:13px" colspan="99">
                                            <strong class="mr16">Subtotal</strong>
                                            <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
                    <div class="clearfix">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                <table class="table table-sm" style="page-break-inside: avoid;">
                                    <!-- <tr class="border-black o_subtotal" style="">
                                        <td style="font-size:13px"><strong>Subtotal</strong></td>
                                        <td class="text-right" style="font-size:13px">
                                            <span t-field="invoice.amount_untaxed"/>
                                        </td>
                                    </tr> -->
                                    <t t-foreach="invoice.amount_by_group" t-as="amount_by_group">
                                        <tr style="">
                                            <t t-if="len(invoice.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == amount_by_group[2]">
                                                <td><span class="text-nowrap" t-esc="amount_by_group[0]"/></td>
                                                <td class="text-right o_price_total">
                                                    <span class="text-nowrap" t-esc="amount_by_group[3]" />
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span class="text-nowrap"> on
                                                        <t t-esc="amount_by_group[4]"/>
                                                    </span>
                                                </td>
                                                <td class="text-right o_price_total">
                                                    <span class="text-nowrap" t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr class="border-black o_total">
                                        <td style="font-size:13px"><strong>Total</strong></td>
                                        <td style="font-size:13px" class="text-right">
                                            <span class="text-nowrap" t-field="invoice.amount_total"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

            </div>
        </template>
	</data>
</odoo>