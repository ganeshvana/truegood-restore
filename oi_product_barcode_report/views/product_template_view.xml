<?xml version="1.0"?>
<odoo>
    <data>

        <template id="report_productlabel_inherit">
            <t t-call="web.basic_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="product">
                        <t t-call="oi_product_barcode_report.report_simple_label_inherit">
                            <t t-set="product" t-value="product"/>
                        </t>
                    </t>
                </div>
            </t>
            <!-- <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="oi_product_barcode_report.report_simple_label_inherit" />
                </t>
            </t> -->
        </template>

        <template id="report_simple_label_inherit">
            <div style="width: 70mm; display: inline-table; height: 25mm;">
                <table class="table table-bordered mb-0" style="margin-top:5px;">
                    <tr>
                        <th class="table-active text-center" style="height: 20%;">
                            <strong><span t-esc="product.display_name[0:25]"/></strong>
                        </th>
                    </tr>
                    <tr>
                        <td class="text-center align-middle" style="height: 15%;padding-left:1px">
                            <t t-if="product.barcode">
                                <img align="left" alt="Barcode"  t-if="len(product.barcode) == 13" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', quote_plus(product.barcode or ''), 600, 150)" style="width:100%;height:30%;"/>
                                <img align="left" alt="Barcode"  t-elif="len(product.barcode) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', quote_plus(product.barcode or ''), 600, 150)" style="width:100%;height:30%;"/>
                                <img align="left" alt="Barcode"  t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(product.barcode or ''), 600, 150)" style="width:100%;height:30%;"/>
                                <span t-field="product.barcode"/>
                            </t>
                            <t t-else=""><span class="text-muted">No barcode available</span></t>
                        </td>
                    </tr>
                </table>
            </div>
        </template>
	</data>
</odoo>